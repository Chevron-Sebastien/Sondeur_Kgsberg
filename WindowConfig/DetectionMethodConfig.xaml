<Window x:Class="Sondeur_1007_Kongsberg.WindowConfig.DetectionMethodConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sondeur_1007_Kongsberg.WindowConfig"
        mc:Ignorable="d"
        Title="Detection config" Height="400" Width="300" Closing="Window_Closing">
    <Grid Background="#FF3C3C3C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="380"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Detection method" FontSize="24" Foreground="Wheat" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,333"/>
        <Button x:Name="buttonFirstSend" Content="First" Margin="64,68,64,268" FontSize="24" Click="buttonFirst_Click" ></Button>
        <Button x:Name="buttonPeakSend_Copy" Content="Peak" Margin="64,148,64,188" FontSize="24" Click="buttonPeakSend_Click" />
        <Button x:Name="buttonAskConfig" Content="Ask config ?" FontSize="24" Margin="64,313,64,25" Click="buttonAskConfig_Click"></Button>
    </Grid>
</Window>

