<Window x:Class="Sondeur_1007_Kongsberg.WindowConfig.TVGAutoGainConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sondeur_1007_Kongsberg.WindowConfig"
        mc:Ignorable="d"
        Title="TVG Auto Gain config" Height="400" Width="300" Closing="Window_Closing">
    <Grid Background="#FF3C3C3C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="380"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="TVG Auto gain" FontSize="24" Foreground="Wheat" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,333"/>
        <Button x:Name="buttonDisableSend" Content="Disable" Margin="64,52,64,284" FontSize="24" Click="buttonDisableSend_Click" ></Button>
        <Button x:Name="buttonDCOffsetSend" Content="DC Offset" Margin="64,119,64,217" FontSize="24" Click="buttonDCOffsetSend_Click" ></Button>

        <Button x:Name="buttonAskConfig" Content="Ask Config ?" FontSize="24" Margin="66,311,62,25" Click="buttonAskConfig_Click"></Button>
    </Grid>
</Window>
